@{
    ViewData["Title"] = "Opciones de migración";
    Layout = "~/Views/Shared/_MenuAdministradorLayout.cshtml";
}
<style>
    .migration-table {
        border-collapse: collapse;
        position: relative;
        max-width: 1280px;
        z-index: 1;
        margin: auto;
        overflow-y: scroll;
        height: 350px;
    }

        .migration-table th, .migration-table td {
            padding: 10px;
            border: 1px solid #ccc;
        }


</style>


<div class="text-center">
    <h1 class="display-4">Migración de información</h1>
</div>
<br />
<div>
    <div>
    <table class="migration-table">
        <thead>
            <tr>
                <th>Opción</th>
                <th>Ir</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Migrar Cursos con Módulos</td>
                <td>
                    <form asp-action="UploadCoursesCSVView" asp-controller="Admin">
                        <button class="btn btn-success" type="submit">Ir a opción</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>Migrar Precio de los Cursos</td>
                <td>
                    <form asp-action="UploadPricesCSVView" asp-controller="Admin">
                        <button class="btn btn-success" type="submit">Ir a opción</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>Migrar Cronogramas</td>
                <td>
                    <form asp-action="UploadSchedulesCSVView" asp-controller="Admin">
                        <button class="btn btn-success" type="submit">Ir a opción</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>Migrar Estudiantes</td>
                <td>
                    <form asp-action="UploadStudentsCSVView" asp-controller="Admin">
                        <button class="btn btn-success" type="submit">Ir a opción</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>Migrar Inscripciones</td>
                <td>
                    <form asp-action="UploadInscriptionsCSVView" asp-controller="Admin">
                        <button class="btn btn-success" type="submit">Ir a opción</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>Migrar Pagos 1er CSV</td>
                <td>
                    <form asp-action="UploadPaymets1stCSVView" asp-controller="Admin">
                        <button class="btn btn-success" type="submit">Ir a opción</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>Migrar Pagos 2do CSV</td>
                <td>
                    <form asp-action="UploadPaymets2ndCSVView" asp-controller="Admin">
                        <button class="btn btn-success" type="submit">Ir a opción</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
    </div>
</div>

