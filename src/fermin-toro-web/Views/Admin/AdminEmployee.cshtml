@{
    ViewData["Title"] = "Empleados";
    Layout = "~/Views/Shared/_MenuAdministradorLayout.cshtml";
}
<style>
    .migration-table {
        border-collapse: collapse;
    }

        .migration-table th, .migration-table td {
            padding: 10px;
            border: 1px solid #ccc;
        }

    .table-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50vh;
    }
</style>


<div class="text-center">
    <h1 class="display-4">Administración de Empleados</h1>
</div>

<div class="table-container">
    <table class="migration-table">
        <thead>
            <tr>
                <th>Opción</th>
                <th>Ir</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Agregar Nuevo Empleado</td>
                <td>
                    <form asp-action="Add" asp-controller="Employee">
                        <button class="btn btn-success" type="submit">Ir a opción</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>
                    Ver lista de empleados
                    <br />
                    <p>(Modificar Información / Permisos)</p>
                </td>
                <td>
                    <form asp-action="AllEmployees" asp-controller="Employee">
                        <button class="btn btn-success" type="submit">Ir a opción</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>


