        <div>
            <table>
                <thead>
                    <tr>
                        <th>N° Lista</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Cédula</th>
                        <th>Teléfono</th>
                        <th>Correo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students)
