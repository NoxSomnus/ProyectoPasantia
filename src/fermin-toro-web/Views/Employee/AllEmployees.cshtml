@{
    ViewData["Title"] = "Listado de empleados";
    Layout = "~/Views/Shared/_MenuAdministradorLayout.cshtml";
}

@model IEnumerable<AllEmployeesModel>

<style>
    .employee-table {
        border-collapse: collapse;
    }

        .employee-table th, .migration-table td {
            padding: 10px;
            border: 1px solid #ccc;
        }

    .table-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50vh;
    }
</style>


<div class="text-center">
    <h1 class="display-4">Administrar Empleados</h1>
</div>

<div class="table-container">
    <table class="employee-table">
        <thead>
            <tr>
                <th>Cedula</th>
                <th>Nombre</th>
                <th>Usuario</th>
                <th>Administrar</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var employee in Model)
                {
                <tr>
                    <td>@employee.Cedula</td>
                    <td>@employee.Nombre</td>
                    <td>@employee.Username</td>
                    <td>@using (Html.BeginForm("AllEmployees", "Employee", FormMethod.Get))
                        {
                            <input type="hidden" name="id" value="@employee.Id" />
                            <button type="submit" asp-route-id="@employee.Id">Administrar</button>
                        }
                    </td>

                </tr>
                }
        </tbody>
    </table>
</div>